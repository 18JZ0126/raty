{
  "env": {
    "browser": true,
    "es2021": true
  },

  "extends": "eslint:recommended",

  "globals": {
    "$": false,
    "afterEach": false,
    "beforeEach": false,
    "context": true,
    "describe": false,
    "expect": false,
    "Helper": true,
    "it": false,
    "xit": false
  },

  "parserOptions": {
    "ecmaVersion": 12
  },

  "rules": {
    "indent":          ["error", 2],
    "linebreak-style": ["error", "unix"],
    "one-var":         ["error", "never"],
    "quotes":          ["error", "single"],
    "semi":            ["error", "always"]
  }
}
